node {
    checkout scm
    sh 'heroku git:remote -a infinite-tundra-49512'
    docker.image('node:lts-buster-slim').inside {
    	stage('Build') {
            sh 'yarn install'
    	}
    	stage('Test') {
            sh './jenkins/scripts/test.sh'
    	}
    }
    stage('Manual Approval') {
           input 'Continue in deploy stage?'
    }
    stage('Deploy'){
        sh "git push heroku HEAD:master"
        sleep(60)
    }
}
